<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/contact_edit_viewgroup_margin"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/contact_edit_phone_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight="7" />

    <EditText
        android:id="@+id/contact_edit_phone_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:layout_weight="5"
        android:inputType="phone"
        android:hint="@string/contact_edit_number_hint" />

    <ImageButton
        android:id="@+id/contact_edit_remove"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_remove_24dp" />

</LinearLayout>